<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/launchView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.huantansheng.meitumeixin.LaunchActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/appNameBackground"
        android:layout_marginBottom="@dimen/app_name_padding"
        android:text="@string/app_name"
        android:textColor="@color/appName"
        android:textStyle="bold"
        android:padding="@dimen/dp_16"
        android:textSize="@dimen/font_app_name_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
