<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_v21</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_v21</item>
        <item name="colorAccent">@color/colorAccent_v21</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/translation</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="LaunchStyle" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>